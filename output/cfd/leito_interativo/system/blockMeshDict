FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// criar caixa ao redor do leito (20% maior)
xMin -1.2;
xMax 1.2;
yMin -1.2;
yMax 1.2;
zMin -0.5;
zMax 5.5;

vertices
(
    ($xMin $yMin $zMin)
    ($xMax $yMin $zMin)
    ($xMax $yMax $zMin)
    ($xMin $yMax $zMin)
    ($xMin $yMin $zMax)
    ($xMax $yMin $zMax)
    ($xMax $yMax $zMax)
    ($xMin $yMax $zMax)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (40 40 60) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    walls
    {
        type wall;
        faces
        (
            (0 3 2 1)  // bottom
            (4 5 6 7)  // top
            (0 4 7 3)  // left
            (2 6 5 1)  // right
            (1 5 4 0)  // front
            (3 7 6 2)  // back
        );
    }
);

mergePatchPairs
(
);

