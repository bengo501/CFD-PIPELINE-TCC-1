// G4-3: Exclusividade count x target_porosity
// Objetivo: Testar regra de exclusividade e convers√£o coerente

bed {
    diameter = 0.05 m;
    height = 0.1 m;
    wall_thickness = 0.002 m;
    clearance = 0.01 m;
    material = "steel";
}

lids {
    top_type = "flat";
    bottom_type = "flat";
    top_thickness = 0.003 m;
    bottom_thickness = 0.003 m;
}

particles {
    kind = "sphere";
    diameter = 0.005 m;
    // Remover count e definir target_porosity
    // count = 100;  // REMOVIDO
    target_porosity = 0.40;      // Exemplo: 0.40
    density = 2500.0 kg/m3;
    restitution = 0.3;
    friction = 0.5;
    seed = 42;
}

packing {
    method = "rigid_body";
    gravity = -9.81 m/s2;
    substeps = 10;
    max_time = 5.0 s;
}

export {
    formats = ["blend", "stl"];
    units = "m";
}

cfd {
    regime = "laminar";
    inlet_velocity = 0.1 m/s;
    fluid_density = 1000.0 kg/m3;
    fluid_viscosity = 0.001 Pa.s;
    cells_per_dp = 5;
    max_iterations = 1000;
    convergence_criteria = 1e-6;
}

