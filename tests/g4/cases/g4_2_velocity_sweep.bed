// G4-2: Varredura de velocidade
// Objetivo: Gerar múltiplos pontos da curva

bed {
    diameter = 0.05 m;
    height = 0.1 m;
    wall_thickness = 0.002 m;
    clearance = 0.01 m;
    material = "steel";
}

lids {
    top_type = "flat";
    bottom_type = "flat";
    top_thickness = 0.003 m;
    bottom_thickness = 0.003 m;
}

particles {
    kind = "sphere";
    diameter = 0.005 m;
    count = 100;
    density = 2500.0 kg/m3;
    restitution = 0.3;
    friction = 0.5;
    seed = 42;
}

packing {
    method = "rigid_body";
    gravity = -9.81 m/s2;
    substeps = 10;
    max_time = 5.0 s;
}

export {
    formats = ["blend", "stl"];
    units = "m";
}

cfd {
    regime = "laminar";
    // Trocar inlet_U escalar por lista
    // Exemplo: [0.05, 0.10, 0.15] m/s
    // Por enquanto, usar placeholder que será substituído no script
    inlet_velocity = {{INLET_U}} m/s;
    fluid_density = 1000.0 kg/m3;
    fluid_viscosity = 0.001 Pa.s;
    cells_per_dp = 5;
    max_iterations = 1000;
    convergence_criteria = 1e-6;
}

